  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "mocha": "^6.1.4",
    "should": "^11.2.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "clone": "^1.0.2",
    "mongodb": "^3.3.3",
    "mzen-schema": "0.0.103"
